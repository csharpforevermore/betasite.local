@inherits UmbracoViewPage

@{
    var globalSettings = (Umbraco.Web.PublishedModels.GlobalSettings)Model.GlobalSettings();

    if(globalSettings.Enable is bool)
    {
        bool isEnabled = (bool) globalSettings.Enable;
        if (isEnabled)
        {
            if (globalSettings.RememberAcceptanceDurationDays > 0)
            {
                @Html.Raw("<script>var exdays = " + globalSettings.RememberAcceptanceDurationDays + ";</script>")
            }
            else
            {
                @Html.Raw("<script>var exdays = 365;</script>")
            }
        }
    }
}
