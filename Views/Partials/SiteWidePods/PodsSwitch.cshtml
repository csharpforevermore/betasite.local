@inherits UmbracoViewPage<IPublishedContent>

@{
    int globalSettingsId = Convert.ToInt32(ViewData["globalSettingsID"]);
    bool addPodContainer = Convert.ToBoolean(ViewData["addPodContainer"]);
    string itemsPerRow = ViewData["itemsPerRow"] != null ? ViewData["itemsPerRow"].ToString() : "items-3";

    switch (Model.DocumentTypeAlias)
    {
        case Swp_GeneralPod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_GeneralPod", (Swp_GeneralPod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Swp_ImagePod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_ImagePod", (Swp_ImagePod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
