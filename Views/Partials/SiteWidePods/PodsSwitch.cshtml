            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_VideoPod", (Swp_VideoPod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Swp_CodePod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_CodePod", (Swp_CodePod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Swp_ListingPod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_ListingPod", (Swp_ListingPod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Swp_BlockquotePod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_BlockquotePod", (Swp_BlockquotePod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Swp_FormPod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
                @Html.Partial("SiteWidePods/SWP_FormPod", (Swp_FormPod)Model, new ViewDataDictionary { { "globalSettingsID", globalSettingsId } })
