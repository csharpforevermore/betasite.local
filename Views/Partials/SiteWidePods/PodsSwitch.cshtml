            }
            break;
        case Swp_RelatedContentPod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("SiteWidePods/SWP_RelatedContentPod", (Swp_RelatedContentPod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
    }
}

