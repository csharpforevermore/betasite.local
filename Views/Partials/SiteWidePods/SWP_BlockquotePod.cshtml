@inherits UmbracoViewPage

@{

    string textAlignment;

    switch (Model.TextAlignment)
    {
        case Options.TextAlignment_Left:
            textAlignment = "text-left";
            break;
        case Options.TextAlignment_Center:
            textAlignment = "text-center";
            break;
        case Options.TextAlignment_Right:
            textAlignment = "text-right";
            break;
        default:
            textAlignment = "text-left";
            break;
    }

    <div class="item blockquote-pod c3-bg inner @textAlignment">
        <blockquote class="c5-text">
            <p>@Html.Raw(Html.ReplaceLineBreaks(Model.Quote))</p>
            @if (Model.Cite.HasValue())
            {
                <cite>
                    <span class="who c4-text">@Model.Cite</span>
                </cite>
            }
        </blockquote>
    </div>
}