@inherits UmbracoViewPage
	
@{
    var navigation = (Navigation)Model.Navigation();

    ESOLink ctaLink = Umbraco.GetLinkFromRelatedLink(navigation.CtaLink);
    
    if (ctaLink != null)
    {
        <nav class="cta-link"><a class="btn c5-borders c5-text" href="@ctaLink.LinkURL" @Html.Raw(ctaLink.LinkTitle) @Html.Raw(ctaLink.LinkTarget)>@ctaLink.LinkCaption@Html.Raw(ctaLink.LinkIcon)</a></nav>
    }
}